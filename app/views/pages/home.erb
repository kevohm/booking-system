<main class="min-h-screen bg-gray-50 flex flex-col items-center justify-center px-6">
  <!-- Hero Section -->
  <section class="relative w-full max-w-5xl text-center">
    <div class="absolute inset-0 bg-cover bg-center rounded-lg opacity-20" 
      style="background-image: url('/assets/library-bg.jpg');">
    </div>
    
    <div class="relative p-10">
      <h1 class="text-5xl font-extrabold text-blue-700 drop-shadow-md">Discover & Book Your Favorite Books</h1>
      <p class="mt-4 text-lg text-gray-800">
        Explore a vast collection of books and reserve them effortlessly.
      </p>

      <!-- Search Bar -->
      <div class="mt-6 flex justify-center">
        <form action="<%= library_books_path %>" method="get" class="flex items-center bg-white shadow-md rounded-lg overflow-hidden w-full max-w-lg border">
  <input type="text" name="query" value="<%= params[:query] %>" placeholder="Search books by title, author, or description..." 
    class="w-full px-4 py-3 focus:outline-none" />
  <button type="submit" class="px-4 py-3 bg-blue-600 text-white hover:bg-blue-500">
    🔍
  </button>
</form>

      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
    <div class="p-6 bg-white shadow-md rounded-lg">
      📚
      <h3 class="text-xl font-semibold mt-3">Browse Books</h3>
      <p class="text-gray-600">Explore our vast collection and discover new reads.</p>
    </div>
    <div class="p-6 bg-white shadow-md rounded-lg">
      📝
      <h3 class="text-xl font-semibold mt-3">Easy Reservations</h3>
      <p class="text-gray-600">Reserve books online and pick them up at your convenience.</p>
    </div>
    <div class="p-6 bg-white shadow-md rounded-lg">
      🚀
      <h3 class="text-xl font-semibold mt-3">Track Bookings</h3>
      <p class="text-gray-600">View and manage your book reservations effortlessly.</p>
    </div>
  </section>

  <!-- Call-to-Action Buttons -->
  <div class="mt-12 flex flex-wrap justify-center gap-4">
    <%= link_to "Browse Books", library_books_path, 
      class: "px-6 py-3 text-lg font-medium bg-green-600 text-white rounded-lg hover:bg-green-500 shadow-md" %>

    <%= link_to "My Bookings", borrowings_index_path, 
      class: "px-6 py-3 text-lg font-medium bg-indigo-600 text-white rounded-lg hover:bg-indigo-500 shadow-md" %>

    <%= link_to "Sign Up", new_user_path, 
      class: "px-6 py-3 text-lg font-medium bg-orange-600 text-white rounded-lg hover:bg-orange-500 shadow-md" %>

    <%= link_to "Login", new_session_path, 
      class: "px-6 py-3 text-lg font-medium bg-gray-700 text-white rounded-lg hover:bg-gray-600 shadow-md" %>
  </div>
</main>
