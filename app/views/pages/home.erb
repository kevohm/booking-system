<style>
  .hero-section {
    background-image: url('/hero.jpg');
    background-color: rgba(0,0,0,.7);
    background-blend-mode: multiply;
    background-size: cover;
    background-position: center;

  }
</style>

<main class="h-screen bg-gray-50 flex flex-col items-center justify-center">
  <!-- Hero Section -->
  <section class="relative h-full  w-full text-center inset-0 hero-section">
    
    <div class="relative p-10">
      <h1 class="text-5xl font-extrabold text-white drop-shadow-md">Discover & Book Your Favorite Books</h1>
      <p class="mt-4 text-lg text-gray-200">
        Explore a vast collection of books and reserve them effortlessly.
      </p>

      <!-- Search Bar -->
      <div class="mt-6 flex justify-center">
        <form action="<%= library_books_path %>" method="get" class="border-none flex items-center bg-white shadow-md rounded-lg overflow-hidden w-full max-w-lg border">
  <input type="text" name="query" value="<%= params[:query] %>" placeholder="Search books by title, author, or description..." 
    class="w-full px-4 py-3 focus:outline-none" />
  <button type="submit" class="px-4 py-3 bg-blue-600 text-white hover:bg-blue-500">
    üîç
  </button>
</form>

      </div>
    </div>
      <div class="mt-12 flex flex-wrap justify-center gap-4">
     <% if Current.user  %>
         <%= link_to "Browse Books", library_books_path, 
      class: "btn btn-primary" %>

    <%= link_to "My Bookings", borrowings_index_path, 
      class: "btn btn-success" %>

     <% else %>
    <%= link_to "Sign Up", new_user_path, 
      class: "px-6 py-3 text-lg font-medium bg-orange-600 text-white rounded-lg hover:bg-orange-500 shadow-md" %>

    <%= link_to "Login", new_session_path, 
      class: "px-6 py-3 text-lg font-medium bg-gray-700 text-white rounded-lg hover:bg-gray-600 shadow-md" %>
     <% end %>
  </div>
  </section>



</main>
